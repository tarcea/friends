<% if user_signed_in? %>
<h1>Friends</h1>
<% if user_signed_in? %>
<%= current_user.email %>
<% end %>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if current_user == friend.user %>
      <tr>
        <td><%= link_to friend.name, friend %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.email %></td>
        <td><%= friend.user_id %></td>
        <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger btn-sm' %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Friend', new_friend_path, class: "btn btn-secondary" %>
<% else %>
<h1>Welcome to Gogoland</h1>
<p>here is warm and we have cookies ...</p>
<% end %>